{
	"name": "chromecast",
	"version": "0.0.1",
	"description": "Cast your steam deck screen to a chromecast receiver",
	"scripts": {
		"prepare": "if [ -f requirements.txt ]; then\n\tpip3 install -U -r requirements.txt -t py_modules\nfi",
		"build": "shx rm -rf dist && rollup -c",
		"watch": "rollup -c -w",
		"test": "echo \"Error: no test specified\" && exit 1",
		"test_backend": "export PYTHONPATH=\"$PWD/backend:$PWD/py_modules\"; python3 test.py"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lufinkey/chromecast-decky-plugin.git"
	},
	"keywords": [
		"decky",
		"plugin",
		"plugin-template",
		"steam-deck",
		"deck"
	],
	"author": "Luis Finke <luisfinke@gmail.com>",
	"license": "BSD-3-Clause",
	"bugs": {
		"url": "https://github.com/lufinkey/chromecast-decky-plugin/issues"
	},
	"homepage": "https://github.com/lufinkey/chromecast-decky-plugin#readme",
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-replace": "^4.0.0",
		"@rollup/plugin-typescript": "^8.3.3",
		"@types/react": "16.14.0",
		"@types/webpack": "^5.28.0",
		"rollup": "^2.77.1",
		"rollup-plugin-import-assets": "^1.1.1",
		"shx": "^0.3.4",
		"tslib": "^2.4.0",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"decky-frontend-lib": "^3.18.5",
		"react-icons": "^4.4.0"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"react",
				"react-dom"
			]
		}
	}
}
